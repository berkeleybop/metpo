@prefix metpo:     <https://w3id.org/metpo/> .
@prefix metpo-map: <https://w3id.org/metpo/mapping/> .
@prefix prov:      <http://www.w3.org/ns/prov#> .
@prefix skos:      <http://www.w3.org/2004/02/skos/core#> .
@prefix schema:    <http://schema.org/> .
@prefix owl:       <http://www.w3.org/2002/07/owl#> .
@prefix rdf:       <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:      <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:       <http://www.w3.org/2001/XMLSchema#> .

<https://w3id.org/metpo/mappings>
    a owl:Ontology ;
    rdfs:label "METPO external mappings ontology" ;
    rdfs:comment "Mappings between METPO entities and external dataset representations (Madin, BacDive, BactoTraits, etc.), modeled using PROV, SKOS, and Schema.org." .

#################################################################
# Classes
#################################################################

metpo:Mapping
    a owl:Class ;
    rdfs:subClassOf prov:Entity ;
    rdfs:label "mapping between METPO entity and external representation" ;
    rdfs:comment "An instance represents one mapping between a METPO class or property and a representation of that concept in an external dataset or data structure (e.g., column/value pair, JSON path/value, multi-field rule)." .

#################################################################
# Example dataset individuals (optional but useful)
#################################################################

metpo:MadinDataset
    a schema:Dataset , prov:Entity ;
    rdfs:label "Madin et al. traits dataset" .

metpo:BacDiveDataset
    a schema:Dataset , prov:Entity ;
    rdfs:label "BacDive bacterial diversity metadatabase" .

metpo:BactoTraitsDataset
    a schema:Dataset , prov:Entity ;
    rdfs:label "BactoTraits dataset" .
