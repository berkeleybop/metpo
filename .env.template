# ==============================================================================
# METPO Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your API keys
# All scripts in this repository use this single .env file in the repository root

# BioPortal API Key
# Sign up for free at: https://bioportal.bioontology.org/accounts/new
BIOPORTAL_API_KEY=

# GitHub Token (optional, for GitHub API access)
GITHUB_TOKEN=

# ==============================================================================
# LLM Provider Configuration
# ==============================================================================

# For OpenAI:
OPENAI_API_KEY=
LITELLM_MODEL=openai:gpt-4o-mini

## For Anthropic:
#ANTHROPIC_API_KEY=
#LITELLM_MODEL=claude-3-sonnet-20240229

## For CBORG Proxy (LBL internal):
#CBORG_API_KEY=
#CBORG_API_BASE=https://api.cborg.lbl.gov

## For Custom Proxy (e.g., cborg.lbl.gov):
#ANTHROPIC_API_KEY=
#LITELLM_MODEL=claude-sonnet:latest
#LITELLM_API_BASE=https://api.cborg.lbl.gov/v1

# ==============================================================================
# Database Configuration
# ==============================================================================

# MongoDB connection (for BactoTraits/Madin workflows)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=metpo

# ChromaDB settings (for semantic alignment pipeline)
CHROMA_PATH=./chroma_db
CHROMA_HOST=localhost
CHROMA_PORT=8000

# ==============================================================================
# Literature Mining
# ==============================================================================

# NCBI API key for PubMed fetching (optional but recommended to avoid rate limits)
# Sign up at: https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY=

# ==============================================================================
# Pipeline Settings
# ==============================================================================

# Distance threshold for semantic matching (0.0-1.0, lower = stricter)
DISTANCE_THRESHOLD=0.35

# Batch size for embedding operations
EMBEDDING_BATCH_SIZE=1000

# API request delay (seconds) to avoid rate limits
API_DELAY=0.5

# ==============================================================================
# Development Settings
# ==============================================================================

# Enable debug output
DEBUG=false

# Default dry-run mode for destructive operations
DRY_RUN=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
